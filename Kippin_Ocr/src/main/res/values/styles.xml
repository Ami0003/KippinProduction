<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="Date_Picker_Spinner">
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NewDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="Theme.AppCompat.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>
    <!-- -->

    <style name="select_date_et" >
        <item name="android:textColor">@color/select_date_et</item>
        <item name="android:textSize">@dimen/dp_14</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/dp_7</item>
        <item name="android:background">@drawable/input_edit</item>
    </style>


    <style name="bank_statement_headers">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/dp_11</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/bank_statement_headers</item>
    </style>

    <style name="charity_statement_headers">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/dp_15</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#E74C3C</item>
    </style>
    <style name="charity_statement_contents">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">@dimen/dp_11</item>
    <item name="android:gravity">center</item>
    </style>

    <style name="bank_statement_contents">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/dp_11</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ocr_text_non_editable_top">
        <item name="android:paddingLeft">@dimen/dp_22</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/dp_13</item>
        <item name="android:background">@color/background_dashboard</item>
    </style>



    <style name="edittext_lanscape">
        <item name="android:imeOptions">flagNoFullscreen</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="ocr_text_non_editable_top_right"  parent="edittext_lanscape">
        <item name="android:textColor">#397EC0</item>
        <item name="android:textSize">@dimen/dp_13</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:background">@color/background_dashboard</item>
    </style>
    <style name="ocr_text_non_editable_middle" parent="edittext_lanscape">
        <item name="android:paddingLeft">@dimen/dp_22</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/dp_13</item>
    </style>



    <style name="ocr_text_non_editable_middle_right" parent="edittext_lanscape">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">@dimen/dp_5</item>
        <item name="android:background">@drawable/input</item>
        <item name="android:textSize">@dimen/dp_13</item>
    </style>
</resources>
