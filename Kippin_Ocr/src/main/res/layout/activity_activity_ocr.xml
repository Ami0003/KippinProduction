                        android:layout_height="42dp"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/ocr_text_non_editable_middle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="265"
                            android:text="@string/ocr_classification_" />

                        <TextView
                            android:id="@+id/etClassification"
                            style="@style/ocr_text_non_editable_middle_right"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="410"
                            android:gravity="center_vertical"
                            android:hint="@string/ocr_classification" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:gravity="top|center_horizontal"
