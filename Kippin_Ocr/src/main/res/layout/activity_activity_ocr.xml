                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:gravity="top|center_horizontal"
                            android:text="*"
                            android:textColor="@android:color/darker_gray"
                            android:visibility="invisible"></TextView>

