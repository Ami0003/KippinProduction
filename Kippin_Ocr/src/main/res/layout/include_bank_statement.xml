<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="6.5dp"
    android:paddingBottom="6.5dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivBankIcon"
        android:layout_width="@dimen/dp_53"
        android:layout_height="@dimen/dp_53"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@drawable/bank" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:text="New Text"
            android:textColor="#2B7FD2"
            android:textStyle="bold"
            android:textSize="@dimen/dp_15" />
        <TextView
            android:id="@+id/tvBankStatement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:text="New Text"
            android:textColor="#AAAAAA"
            android:textSize="@dimen/dp_10" />
    </LinearLayout>


    <ImageView
        android:id="@+id/ivEditIcon"
        android:layout_width="@dimen/dp_40"
        android:visibility="gone"
        android:layout_height="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@drawable/edit_icn_red" />

    <ImageView
        android:id="@+id/ivViewIcon"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_18"
        android:src="@drawable/detail_icon" />
</LinearLayout>