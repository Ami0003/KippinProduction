<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dashboard"
    android:orientation="vertical">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dashboard_margin_grid_logo"
        android:layout_marginTop="@dimen/dashboard_logo_margin_top"
        android:src="@drawable/kippin_accounting_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivReconcile"
            android:layout_width="@dimen/dashboard_width_grid"
            android:layout_height="@dimen/dashboard_height_grid"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/transaction" />

        <ImageView
            android:id="@+id/ivConnection"
            android:layout_width="@dimen/dashboard_width_grid"
            android:layout_height="@dimen/dashboard_height_grid"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_5"
            android:background="@drawable/connection_button_normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCamera"
            android:layout_width="@dimen/dashboard_width_grid"
            android:layout_height="@dimen/dashboard_height_grid"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/upload_dashboard" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivLogout"
                android:layout_width="@dimen/dashboard_width_grid_element"
                android:layout_height="@dimen/dashboard_height_grid_element"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@drawable/logout_normal"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivInvoice"
                android:layout_width="@dimen/dashboard_width_grid"
                android:layout_height="@dimen/dashboard_height_grid"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@drawable/invoice_bg"
                android:visibility="visible" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

