<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="587.5dp"
    android:layout_height="@dimen/bank_statement_element_height"
    android:orientation="horizontal">

    <!--<TextView
        android:id="@+id/tvDescription"
        style="@style/bank_statement_contents"
        android:gravity="center"
        android:layout_width="@dimen/bank_statement_element_width"
        android:layout_height="match_parent" />-->
    <TextView
        android:id="@+id/tvDebits"
        style="@style/bank_statement_contents"
        android:layout_width="@dimen/bank_statement_element_width"
        android:layout_height="match_parent"

        android:gravity="center" />

    <TextView
        android:id="@+id/tvCredits"
        style="@style/bank_statement_contents"
        android:layout_width="@dimen/bank_statement_element_width"
        android:layout_height="match_parent"

        android:gravity="center" />

    <TextView
        android:id="@+id/tvClassification"
        style="@style/bank_statement_contents"
        android:layout_width="@dimen/bank_statement_element_width"
        android:layout_height="match_parent"
        android:gravity="center" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvStatus"
            style="@style/bank_statement_contents"
            android:layout_width="@dimen/bank_statement_element_width"
            android:layout_height="match_parent"
            android:gravity="center|center_vertical"
            android:text="Pending" />

        <ImageView
            android:id="@+id/iv_star"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/icon_star"
            android:visibility="gone" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="@dimen/bank_statement_element_width"
        android:layout_height="@dimen/bank_statement_element_height"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginRight="10dp"
            android:src="@drawable/camera_thik" />

        <ImageView
            android:id="@+id/ivView"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginRight="10dp"
            android:src="@drawable/action_pencil" />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:src="@drawable/delete_icon" />

    </LinearLayout>
</LinearLayout>