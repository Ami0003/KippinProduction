<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context="com.automaticStatement.AutomaticBankStatementLoginNew">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/coming_soon"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp_15"
            />

        <TextView
            android:text="We are activating this feature for you.\nPlease try after sometime."
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/ivOk"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/ok_button"
            />

    </LinearLayout>
</LinearLayout>
