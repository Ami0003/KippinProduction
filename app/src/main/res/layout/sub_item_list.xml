<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/bank_statement_element_height"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvSupplierName"
        style="@style/bank_statement_contents"
        android:layout_width="@dimen/bank_statement_element_width"
        android:layout_height="match_parent"

        android:gravity="center" />

    <TextView
        android:id="@+id/tvInvtAmount"
        style="@style/bank_statement_contents"
        android:layout_width="@dimen/bank_statement_element_width"
        android:layout_height="match_parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvFlowStatus"
        style="@style/bank_statement_contents"
        android:layout_width="@dimen/bank_statement_element_width"
        android:layout_height="match_parent"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="@dimen/bank_statement_element_width"
        android:layout_height="@dimen/bank_statement_element_height"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPreview"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginRight="1dp"
            android:src="@drawable/view_icon_circular" />

        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="5dp"
            android:src="@drawable/action_pencil" />


    </LinearLayout>
</LinearLayout>