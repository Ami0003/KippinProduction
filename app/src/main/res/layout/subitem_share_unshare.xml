<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/layoutOfSubItem"
        android:layout_width="fill_parent"
        android:layout_height="52dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageviewMyPoint"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:src="@drawable/dialog_logo"
            app:civ_border_color="@color/blue"

            app:civ_border_width="2.0dp" />

        <TextView
            android:id="@+id/txtMerchant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/layout_chechBox"
            android:layout_toRightOf="@+id/imageviewMyPoint"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:textSize="@dimen/btn_text_size"
            android:textStyle="normal" />
        <LinearLayout
            android:id="@+id/layout_chechBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/checkbox_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="22dp"
                android:button="@drawable/checkbox_drawable"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/checkbox_unshare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="22dp"
                android:button="@drawable/checkbox_drawable"
                android:background="@null"
                android:checked="false"
                android:textColor="@color/white" />
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
