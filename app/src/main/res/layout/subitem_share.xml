<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/layoutOfSubItem"
        android:layout_width="fill_parent"
        android:layout_height="52dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageviewMyPoint"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:src="@drawable/dialog_logo"
            app:civ_border_color="@color/blue"

            app:civ_border_width="1.4dp" />

        <TextView
            android:id="@+id/txtMerchant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/checkBox1"
            android:layout_toRightOf="@+id/imageviewMyPoint"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:textSize="@dimen/btn_text_size"
            android:textStyle="normal" />


        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="@dimen/twenty_five"
            android:layout_height="@dimen/twenty_five"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:background="@drawable/checkbox_drawable"
            android:button="@null"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>
