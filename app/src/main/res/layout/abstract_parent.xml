<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- ===========HEADER SECTION=================== -->
    <fragment
        android:id="@+id/fragment"
        android:name="com.kippinretail.fragment.FragmentTopbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <!--<GridView
        android:id="@+id/gridView"
        android:layout_marginTop="@dimen/seven_dp_margin"
        android:layout_marginLeft="@dimen/five_dp_margin"
        android:layout_marginRight="@dimen/five_dp_margin"
        android:horizontalSpacing="@dimen/seven_dp_margin"
        android:verticalSpacing="@dimen/five_dp_margin"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:stretchMode="columnWidth"
        android:numColumns="auto_fit"  />-->

    <!--android:layout_marginBottom="@dimen/five_dp_margin"-->
    <LinearLayout
        android:id="@+id/llmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="2dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center|center_horizontal"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/wallet_logo" />

    </LinearLayout>

    <GridView

        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="2dp"
        android:horizontalSpacing="7dp"
        android:numColumns="auto_fit"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/five_dp_margin" />
</LinearLayout>