<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!-- ===========HEADER SECTION=================== -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvTopbarTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/connection_topbar_size"

            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/app_heading_color"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <RelativeLayout
            android:id="@+id/lalayout_ivBack"
            android:layout_width="50dp"
            android:layout_height="@dimen/connection_topbar_size"
            android:clickable="true"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/dp_33"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_l" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout_ivHome"
            android:layout_width="50dp"
            android:layout_height="@dimen/connection_topbar_size"
            android:clickable="true"
            android:visibility="visible"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:padding="3dp"
                android:src="@drawable/home" />
        </RelativeLayout>
    </RelativeLayout>


    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:scaleType="fitXY"

        android:paddingTop="@dimen/activity_vertical_margin" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
       android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="35dp">
        <TextView
            android:id="@+id/btnUpload"
            android:layout_width="@dimen/width_photo_preview"
            android:layout_weight="0"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/upload"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:background="@drawable/drawable_button"

            android:layout_marginRight="@dimen/_photo_preview_margin"
            android:textSize="17dp" />
        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="@dimen/width_photo_preview"
            android:layout_weight="0"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_photo_preview_margin"
            android:layout_marginRight="@dimen/_photo_preview_margin"
            android:background="@drawable/drawable_button"

            android:text="@string/cancel"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />


    </LinearLayout>

</LinearLayout>
