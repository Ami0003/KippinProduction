<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/connection_topbar_size"
    android:background="@android:color/white">


    <TextView
        android:id="@+id/tvTopbarTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/connection_topbar_size"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="@color/app_heading_color"
        android:textSize="15sp"
        android:textStyle="bold" />
    <!--android:textColor="@android:color/black"-->
    <RelativeLayout
        android:id="@+id/lalayout_ivBack"
        android:layout_width="50dp"
        android:layout_height="@dimen/connection_topbar_size"
        android:clickable="true">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/dp_33"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_l" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_ivLogout"
        android:layout_width="50dp"
        android:layout_height="@dimen/connection_topbar_size"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:visibility="gone">

        <ImageView

            android:layout_width="@dimen/dp_30"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="3dp"
            android:src="@drawable/logout_nutton" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/ivAddCustmer"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_10"
        android:visibility="gone"
         android:src="@drawable/add_new" />

    <RelativeLayout
        android:id="@+id/layout_rightText"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/connection_topbar_size"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvRightText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="3dp"
            android:text="Edit"
            android:textColor="#555555"

            android:textSize="@dimen/dp_15"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_ivHome"
        android:layout_width="50dp"
        android:layout_height="@dimen/connection_topbar_size"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="3dp"
            android:src="@drawable/home" />
    </RelativeLayout>

</RelativeLayout>