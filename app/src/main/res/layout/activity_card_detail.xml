<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.kippinretail.CardDetail">

    <!-- ===========HEADER SECTION=================== -->
    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.kippinretail.fragment.FragmentTopbar"
        android:id="@+id/fragment"

        />
    <TextView
        android:id="@+id/txt_merchantName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0060B1"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingLeft="15dp"
        android:textSize="@dimen/dialog_text_size"
        android:textStyle="bold"
        android:layout_below="@+id/fragment"
        android:layout_centerVertical="true"/>


    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/delete"
        android:layout_below="@+id/txt_merchantName"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:id="@+id/iv_barcode"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:scaleType="fitXY"
        android:layout_centerInParent="true"
        android:layout_marginBottom="60dp"/>

    <TextView
        android:id="@+id/txt_barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_below="@+id/iv_barcode"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"/>

</RelativeLayout>
