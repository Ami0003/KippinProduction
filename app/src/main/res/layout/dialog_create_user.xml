<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="vertical"
    android:splitMotionEvents="false">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
         android:background="@drawable/roundwhite"
        android:splitMotionEvents="false">

        <LinearLayout
            android:id="@+id/rl1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:splitMotionEvents="false">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:src="@drawable/login_logo" />


            <TextView
                android:id="@+id/titleMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/five_dp_margin"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:maxHeight="400dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="KIPPIN"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="@dimen/dialog_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textForMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/five_dp_margin"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:maxLines="4"
                android:padding="10dp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/dialog_btn_textsize" />



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnNo"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/left_round_corner"
                    android:gravity="center"
                    android:text="@string/no"
                    android:textColor="@color/more_dark_gray"
                    android:textSize="@dimen/size_more"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnYES"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/right_round_corner"
                    android:gravity="center"
                    android:text="@string/yes"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size_more"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>