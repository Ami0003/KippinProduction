<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/bank_statement_element_height"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvSupplierName"
        style="@style/bank_statement_contents"
        android:layout_width="@dimen/bank_statement_element_width"
        android:layout_height="match_parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvInvoiceNumber"
        style="@style/bank_statement_contents"
        android:layout_width="@dimen/bank_statement_element_width"
        android:layout_height="match_parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvTypeOfInv"
        style="@style/bank_statement_contents"
        android:layout_width="@dimen/bank_statement_element_width"
        android:layout_height="match_parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvInvJVID"
        style="@style/bank_statement_contents"
        android:layout_width="@dimen/bank_statement_element_width"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvPayJVID"
        style="@style/bank_statement_contents"
        android:layout_width="@dimen/bank_statement_element_width"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvInvAmt"
        style="@style/bank_statement_contents"
        android:layout_width="@dimen/bank_statement_element_width"
        android:layout_height="match_parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvPaidAmt"
        style="@style/bank_statement_contents"
        android:layout_width="@dimen/bank_statement_element_width"
        android:layout_height="match_parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvOutStandingBalance"
        style="@style/bank_statement_contents"
        android:layout_width="@dimen/bank_statement_element_width"
        android:layout_height="match_parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvInvAge"
        style="@style/bank_statement_contents"
        android:layout_width="@dimen/bank_statement_element_width"
        android:layout_height="match_parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvFlowStatus"
        style="@style/bank_statement_contents"
        android:layout_width="@dimen/bank_statement_element_width"
        android:layout_height="match_parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvStatus"
        style="@style/bank_statement_contents"
        android:layout_width="@dimen/bank_statement_element_width"
        android:layout_height="match_parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvMehtodOfPayment"
        style="@style/bank_statement_contents"
        android:layout_width="@dimen/bank_statement_element_width"
        android:layout_height="match_parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvInsertAmountToBePaid"
        style="@style/bank_statement_contents"
        android:layout_width="@dimen/bank_statement_element_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:hint="Please Enter"
        android:inputType="numberDecimal"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/tvInsertJVID"
        style="@style/bank_statement_contents"
        android:layout_width="@dimen/bank_statement_element_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:hint="Enter JVID"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <LinearLayout
        android:layout_width="@dimen/bank_statement_element_width"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/check_box_selecter"
            android:visibility="visible" />
    </LinearLayout>

    <Button
        android:id="@+id/btnManualPayment"
        android:layout_width="@dimen/dp_130"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_2"
        android:background="#3275B5"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="Manual Pay"
        android:textAllCaps="false"
        android:textColor="@color/white"
          />

    <Button
        android:id="@+id/btnStripePayment"
        android:layout_width="@dimen/dp_130"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_2"
        android:background="@drawable/red_btn"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="ePayment"
        android:textAllCaps="false"
        android:textColor="@color/white"
         />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="@dimen/dp_130"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_2"
        android:background="@drawable/black_background"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="Cancel"
        android:textColor="@color/white"
          />

</LinearLayout>